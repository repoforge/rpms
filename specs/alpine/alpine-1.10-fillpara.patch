+ int
+ isaword(word,i,j)
+  char word[NSTRING];
+  int i;
+  int j;
+ {
+   return i <= j && is_cletter(word[i]) ?
+           (i < j ? isaword(word,i+1,j) : 1) : 0;
+ }
+ 
+ int
+ isamailbox(word,i,j)
+ char word[NSTRING];
+ int i, j;
+ {
+   return i <= j && (is_cletter(word[i]) || is_a_digit(word[i])
+                  || word[i] == '.')
+        ? (i < j ? isamailbox(word,i+1,j) : 1) : 0;
+ }
