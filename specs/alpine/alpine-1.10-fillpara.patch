+ int
+ get_indent_raw_line(char *q, char *GLine, char *buf, int buflen, int k, int plb)
+ {
+      int i, j;
+ 
+      i = is_indent(GLine+k, plb);
+ 
+      for (j = 0; j < i && j < buflen && (buf[j] = GLine[j + k]); j++);
+      buf[j] = '\0';
+ 
+      return i;
